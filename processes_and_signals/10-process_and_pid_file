#!/usr/bin/env bash
# This script displays messages indefinitely and handles signals

# Create PID file
PID_FILE="/var/run/myscript.pid"
echo $$ > "$PID_FILE"

# Function to handle SIGTERM
term_handler() {
    echo "I hate the kill command"
}

# Function to handle SIGINT (Ctrl+C)
int_handler() {
    echo "Y U no love me?!"
}

# Function to handle SIGQUIT and SIGTERM for cleanup
quit_handler() {
    rm -f "$PID_FILE"
    exit 0
}

# Trap signals
trap 'term_handler' SIGTERM
trap 'int_handler' SIGINT
trap 'quit_handler' SIGQUIT SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
